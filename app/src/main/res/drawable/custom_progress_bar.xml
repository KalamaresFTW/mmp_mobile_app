<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Define the background properties like color etc -->
    <item android:id="@android:id/background">
        <shape>
            <size
                android:height="1dp" />
            <gradient
                android:angle="270"
                android:centerColor="@color/colorBacktroundProgresBarIncome"
                android:centerY="1.0"
                android:endColor="@color/colorBacktroundProgresBarIncome"
                android:startColor="@color/colorBacktroundProgresBarIncome" />
        </shape>
    </item>

    <!-- Define the progress properties like start color, end color etc -->
    <item android:id="@android:id/progress">
        <clip>
            <shape>
                <size
                    android:height="1dp" />
                <gradient
                    android:angle="270"
                    android:centerColor="@color/colorStateGood"
                    android:centerY="1.0"
                    android:endColor="@color/colorStateGood"
                    android:startColor="@color/colorStateGood" />
            </shape>
        </clip>
    </item>
</layer-list>