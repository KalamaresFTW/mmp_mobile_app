<?xml version="1.0" encoding="utf-8"?>
<!-- Change the background color of the button in function of which state it is -->
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:drawable="@drawable/btn_released" android:state_focused="true"></item>
    <item android:drawable="@drawable/btn_pressed" android:state_pressed="true"></item>
    <item android:drawable="@drawable/btn_released"></item>
</selector>