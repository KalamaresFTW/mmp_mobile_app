<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Define the background properties like color etc -->
    <item android:id="@+id/progressBarBackground">
        <shape>
            <gradient
                android:angle="270"
                android:centerColor="@color/colorBackgroundProgressBarIncome"
                android:centerY="1.0"
                android:endColor="@color/colorBackgroundProgressBarIncome"
                android:startColor="@color/colorBackgroundProgressBarIncome" />
        </shape>
    </item>

    <!-- Define the progress properties like start color, end color etc -->
    <item android:id="@+id/progressBarProgress">
        <clip>
            <shape>
                <gradient
                    android:angle="270"
                    android:centerColor="@color/colorBackgroundCardViewIncome"
                    android:centerY="1.0"
                    android:endColor="@color/colorBackgroundCardViewIncome"
                    android:startColor="@color/colorBackgroundCardViewIncome" />
            </shape>
        </clip>
    </item>
</layer-list>