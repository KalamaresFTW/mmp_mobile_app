<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="10dp"
    android:orientation="vertical">

    <TextView
        android:id="@+id/item_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="10dp"
        android:text="Balance from Goals"
        android:textColor="@color/colorWhite" />

    <TableLayout
        android:id="@+id/tableLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="15dp"
        android:layout_marginTop="15dp"
        android:padding="10dp"
        android:stretchColumns="*"
        android:layout_toLeftOf="@+id/imageButton"
        android:layout_toStartOf="@+id/imageButton">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_gravity="center">

            <View style="@style/Divider_horizontal" />
        </LinearLayout>

        <TableRow>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/colorWhite"
                android:gravity="center"
                android:text="Asset Value"
                android:textColor="@color/colorBlack" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/colorWhite"
                android:gravity="center"
                android:text="Debt Value"
                android:textColor="@color/colorBlack" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/colorWhite"
                android:gravity="center"
                android:text="Net Equality"
                android:textColor="@color/colorBlack" />

        </TableRow>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="1dp"
            android:layout_gravity="center">

            <View style="@style/Divider_horizontal" />
        </LinearLayout>

        <TableRow android:padding="5dp">

            <TextView
                android:background="@color/colorAssetsDebtsScreenTitle"
                android:gravity="center_horizontal"
                android:text="€5950.00"
                android:textColor="@color/colorWhite" />

            <TextView
                android:background="@color/colorAssetsDebtsScreenTitle"
                android:gravity="center_horizontal"
                android:text="€0.00"
                android:textColor="@color/colorWhite" />

            <TextView
                android:background="@color/colorAssetsDebtsScreenTitle"
                android:gravity="center_horizontal"
                android:text="€5950.00"
                android:textColor="@color/colorWhite" />

        </TableRow>


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="1dp"
            android:layout_gravity="center">

            <View style="@style/Divider_horizontal" />
        </LinearLayout>

    </TableLayout>

    <ImageButton
        android:id="@+id/imageButton"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_gravity="center"
        android:layout_weight="0.5"
        android:adjustViewBounds="true"
        android:background="@null"
        android:scaleType="fitCenter"
        android:src="@drawable/edit_icon_assets_debts"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignBottom="@+id/tableLayout"
        android:layout_alignTop="@+id/tableLayout" />


</RelativeLayout>