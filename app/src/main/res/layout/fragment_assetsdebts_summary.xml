<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragment.assetsdebts.AssetsDebtsInputsFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorAssetsDebtsScreenBackground">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <RelativeLayout
                android:id="@+id/lay_assets_debts_summary"
                android:layout_width="match_parent"
                android:layout_height="180dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_margin="@dimen/activity_horizontal_margin"
                android:background="@color/colorWhite">

                <TextView
                    android:id="@+id/assets_vs_debts"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/activity_horizontal_margin"
                    android:layout_marginTop="9dp"
                    android:text="@string/title_assets_vs_debts"
                    android:textColor="@color/colorAssetsDebtsHealthPanelTitle"
                    android:textSize="@dimen/cv_title_size"
                    android:textStyle="bold" />

                <ImageButton
                    android:id="@+id/btn_assets_vs_debts_info"
                    android:layout_width="@dimen/cv_title_size"
                    android:layout_height="@dimen/cv_title_size"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="@dimen/activity_horizontal_margin"
                    android:layout_marginTop="9dp"
                    android:background="@drawable/info_icon_assets_1" />


                <View
                    android:id="@+id/cv_separator_1_assetsdebts"
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:layout_below="@id/assets_vs_debts"
                    android:layout_marginBottom="@dimen/activity_vertical_margin"
                    android:layout_marginLeft="@dimen/activity_horizontal_margin"
                    android:layout_marginRight="@dimen/activity_horizontal_margin"
                    android:layout_marginTop="9dp"
                    android:background="@color/colorAssetsDebtsSeparator" />

                <TextView
                    android:id="@+id/tv_assets_label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/cv_separator_1_assetsdebts"
                    android:text="Debts:" />

                <TextView
                    android:id="@+id/tv_debts_label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/tv_assets_label"
                    android:layout_centerVertical="true"
                    android:text="Assets:" />

            </RelativeLayout>

        </LinearLayout>

    </ScrollView>

</FrameLayout>