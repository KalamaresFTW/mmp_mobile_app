<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPensionScreenBackground"
    tools:context=".fragment.pension.PensionGraphsFragment">

    <RelativeLayout
        android:id="@+id/lay_pension_screen_graphs"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:layout_marginRight="@dimen/activity_horizontal_margin"
        android:layout_marginTop="@dimen/activity_vertical_margin"
        android:background="@color/colorWhite">

        <!-- Header Layout -->
        <RelativeLayout
            android:id="@+id/lay_pension_screen_graphs_header"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tv_pension_screen_graphs_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/activity_horizontal_margin"
                android:layout_marginTop="9dp"
                android:text="@string/txt_pension_screen_graphs_title"
                android:textColor="@color/colorPensionScreenTitle"
                android:textSize="@dimen/cv_title_size"
                android:textStyle="bold" />

            <Button
                android:id="@+id/btn_pension_screen_graphs_info"
                android:layout_width="@dimen/cv_title_size"
                android:layout_height="@dimen/cv_title_size"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/activity_horizontal_margin"
                android:layout_marginTop="9dp"
                android:background="@drawable/ic_info" />

            <View
                android:id="@+id/cv_separator_pension_graphs"
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_below="@+id/tv_pension_screen_graphs_title"
                android:layout_marginLeft="@dimen/activity_horizontal_margin"
                android:layout_marginRight="@dimen/activity_horizontal_margin"
                android:layout_marginTop="9dp"
                android:background="@color/colorPensionScreenBackground" />

        </RelativeLayout>

        <!-- Body Layout -->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/lay_pension_screen_graphs_header"
            android:layout_marginBottom="@dimen/activity_vertical_margin"
            android:layout_marginTop="@dimen/activity_vertical_margin">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:textSize="@dimen/cv_text_size"
                android:textColor="@color/colorPensionScreenText"
                android:text="GRAPHS" />

        </RelativeLayout>

    </RelativeLayout>

</FrameLayout>
