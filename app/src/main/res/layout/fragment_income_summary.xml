<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorIncomeScreenBackground"
    tools:context=".fragment.income.IncomeSummaryFragment">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:layout_marginRight="@dimen/activity_horizontal_margin"
        android:layout_marginTop="@dimen/activity_vertical_margin"
        android:background="@color/colorIncomeScreenBackgroundDependents">

        <TextView
            android:id="@+id/tv_income_screen_summary_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/activity_horizontal_margin"
            android:layout_marginTop="9dp"
            android:text="@string/income_screen_summary_title"
            android:textColor="@color/colorWhite"
            android:textSize="@dimen/cv_title_size"
            android:textStyle="bold" />

        <Button
            android:id="@+id/btn_income_screen_summary_info"
            android:layout_width="@dimen/cv_title_size"
            android:layout_height="@dimen/cv_title_size"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/activity_horizontal_margin"
            android:layout_marginTop="9dp"
            android:background="@drawable/ic_info"
            android:backgroundTint="@color/colorIncomeScreenTextDependents" />

        <View
            android:id="@+id/separator_summary"
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_below="@+id/tv_income_screen_summary_title"
            android:layout_marginBottom="@dimen/activity_vertical_margin"
            android:layout_marginLeft="@dimen/activity_horizontal_margin"
            android:layout_marginRight="@dimen/activity_horizontal_margin"
            android:layout_marginTop="9dp"
            android:background="@color/colorIncomeScreenBackground" />

        <TextView
            android:id="@+id/tv_income_screen_sumary"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/separator_summary"
            android:textSize="@dimen/cv_text_size"
            android:layout_marginLeft="@dimen/activity_horizontal_margin"
            android:layout_marginRight="@dimen/activity_horizontal_margin"
            android:layout_marginBottom="@dimen/activity_vertical_margin"
            android:textColor="@color/colorIncomeScreenTextDependents"
            android:text="If, due to the injury, you become unable to work bla bla bla bla bla bla bla bla bla bla bla bla bla bla bla bla" />


    </RelativeLayout>

</FrameLayout>
